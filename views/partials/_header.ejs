<header>
  <nav class="navbar navbar-expand-md navbar-dark" style='background-color: #e3f2fd; border-bottom: 2px solid black'>
    <a class="navbar-brand" style='color:black; font-size: 45px' href="/urls">Pocket-Link</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav" style='vertical-align: text-bottom'>
        <a class="nav-item nav-link hoverable" style='color:rgba(0, 0, 0, 0.605); font-size: 20px; border: 2px solid rgba(0, 0, 0, 0.605); border-radius: 20px; margin-right: 10px' href="/urls">My URLs</a>
        <a class="nav-item nav-link" style='color:rgba(0, 0, 0, 0.605); font-size: 20px; border: 2px solid rgba(0, 0, 0, 0.605); border-radius: 20px' href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(user_id) { %>
    <h4
      class="nav-item nav-link"
      style="color: black; font-size: 20px; vertical-align: middle"
    >
      Logged In As: <%= user_id.email %> ðŸ˜Ž
    </h4>
    <form type="text" method="POST" action="/logout">
      <button
        type="submit"
        class="nav-item nav-link btn btn-info"
        style="display: inline"
      >
        Sign-Out
      </button>
    </form>
    <% } else { %>
    <a
      href="/login"
      class="btn btn-info border"
      style="vertical-align: middle"
      role="button"
    >
      Sign-In
    </a>

    <a
      href="/register"
      class="btn btn-info border"
      style="vertical-align: middle"
      role="button"
    >
      Register
    </a>
    <% } %>
  </nav>
</header>
